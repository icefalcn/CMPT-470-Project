<div class="main_body movie-show">
  <div class="container">
      
      <!-- Display the movie's info here -->
      <div class="movie">
        <%= image_tag @movie.image %>
        <h3 class="movie-title">  <%= @movie.title %>  </h3>
        <p class="movie-release-year"> <%= @movie.release_year %> </p>
        <p class="movie-plot"> <%= @movie.plot %>  </p><br>
        <%= link_to "Edit movie", edit_movie_path(@movie) %>
      </div>
       
    
       <!-- Display each actor's info here -->
      <h2>Cast</h2>
      <% @actors.each do |a| %>
      <div class="actor">
        <%= image_tag a.image %>
        <h3 class="actor-name"><%= a.first_name %>_ <%= a.first_name %> </h3>
        <p class="actor-bio"> <%= a.bio %> </p>
      </div>
      <% end %>
    
    
  </div>
</div>