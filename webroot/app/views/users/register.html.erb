<div class="central">
<%= simple_form_for @user, 
    :url => url_for(:action => 'register'),
    :method => 'post' do |f| %>
		
  <%= f.input :username, label: 'Your username please', error: 'Username is mandatory, please specify one' %>
  <%= f.input :password, input_html: { minlength: 8}, hint: 'No special characters, minimal length 8.' %>
  <%= f.input :emailaddr, placeholder: 'user@domain.com' %>
 
  <%= f.button :submit %>
<% end %>
</div>
