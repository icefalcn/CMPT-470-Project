<!DOCTYPE html>
<html>
  <head>
    <title>Movie Database</title>
    <%= stylesheet_link_tag "application", media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    
    <%= csrf_meta_tags %>
 
    <script>
    $(document).ready(function(){
      $("#menu1").click(function(){
          $(".menu_btn2").slideToggle();
        });
     });
    </script>
  </head>
  <body>
 

    <div class="top">
      <a href="/movies"> <img class="banner" src="http://s3.amazonaws.com/codecademy-content/courses/learn-rails/img/logo.svg"></a>
      <div class="search_bar">
          <%= form_tag('/movies/search', :method => "get", class: "navbar-form", id: "search-form") do %>
            <div class="input-append">
              <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Movie Title", size: "70%" %>
              <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
                   of using a Rails form helper -->
              <button class="btn" type="submit" style="background-color:yellow;"><i class="icon-search">Search</i></button>
            </div>
          <% end %>

        </div> <!--search bar-->

      <!-- <div class="container"> -->
          <div class="login">
           <!--  <h1>Login to Web App</h1> -->
            <form method="post" action="/main">
              <p><input type="text" name="login" value="" placeholder="Username or Email"></p>
              <p><input type="password" name="password" value="" placeholder="Password"></p>
              <!-- <p class="remember_me">
                <label>
                  <input type="checkbox" name="remember_me" id="remember_me">
                  Remember me on this computer
                </label>
              </p> -->
              <!--******-->
              <!-- <p class="submit"><input type="submit" name="commit" value="Login"></p> -->
            </form>
          </div>
